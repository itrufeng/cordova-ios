#
# compile and launch a Cordova/iOS project to the simulator
#

set -e

XCODE_VER=$(xcodebuild -version | head -n 1 | sed -e 's/Xcode //')
XCODE_MIN_VERSION="4.5"

if [[ "$XCODE_VER" < "$XCODE_MIN_VERSION" ]]; then
	echo "Cordova can only run in Xcode version $XCODE_MIN_VERSION or greater."
	exit 1
fi

CORDOVA_PATH=$( cd "$( dirname "$0" )" && pwd -P)
PROJECT_PATH="$(dirname "$CORDOVA_PATH")"
XCODEPROJ=$( ls "$PROJECT_PATH" | grep .xcodeproj  )
PROJECT_NAME=$(basename "$XCODEPROJ" .xcodeproj)

cd "$PROJECT_PATH"

APP=build/$PROJECT_NAME.app
IPA=build/$PROJECT_NAME.ipa
# SDK=`xcodebuild -showsdks | grep iphoneos | awk '{print $4}'`
SDK="iphoneos"

HOMEDIR="$(cd ~ && pwd -P)"

if [ "$1" != "" ]; then
	sed -i -e "s/cloud\.appmars\.com/115.28.36.217/g" "$PROJECT_PATH/www/index.html"

	xcodebuild -project $PROJECT_NAME.xcodeproj -target $PROJECT_NAME -configuration Release -sdk $SDK clean build CONFIGURATION_BUILD_DIR="$PROJECT_PATH/build" CODE_SIGN_IDENTITY="iPhone Distribution: Xi'an Youdao Software Technologies Co., Ltd. (M47ZNK538X)" PROVISIONING_PROFILE="$1" 

	echo -sdk $SDK PackageApplication -v "$PROJECT_PATH/${APP}" -o "$PROJECT_PATH/${IPA}" --sign "iPhone Distribution: Xi'an Youdao Software Technologies Co., Ltd. (M47ZNK538X)"  --embed "$HOMEDIR/Library/MobileDevice/Provisioning Profiles/$1.mobileprovision"

	xcrun -sdk $SDK PackageApplication -v "$PROJECT_PATH/${APP}" -o "$PROJECT_PATH/${IPA}" --sign "iPhone Distribution: Xi'an Youdao Software Technologies Co., Ltd. (M47ZNK538X)"  --embed "$HOMEDIR/Library/MobileDevice/Provisioning Profiles/$1.mobileprovision"
else
	echo "NOT FOUND PROVISIONING FILE CODE!!!"
fi
